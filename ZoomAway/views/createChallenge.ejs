<!DOCTYPE html>
<html>

<head>
    <%- include('common/head') %>
</head>

<body style="background-color: white;">
    <header style="position: sticky; top: 0; z-index: 999;">
        <div class="section-title">
            <h2>Create New Challenge</h2>
        </div>
    </header>
    
    <!--Main layout-->
    <main>
        <div class="create-form container mt-5 mb-5">  
            <!-- Create Form Section -->
            <form action="/"></form>
                <div class="row">
                    <div class="form-group col-md-2">
                        <p><b>Name</b></p>
                    </div>
                    <div class="form-group col-md-10">
                        <input type="text" name="challenge-name" class="form-control" id="challenge-name" placeholder="Challenge Name"/>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                        <p><b>Instruction</b></p>
                    </div>
                    <div class="form-group col-md-10">
                        <textarea class="form-control" name="instruction" id="instruction" placeholder="Instructions"></textarea>
                    </div>
                </div>
                <!-- Maze Section -->
                <div class="row maze">
                    <div class="form-group col-md-2">
                        <p><b>Maze Path</b></p>
                    </div>
                    <div class="form-group col-md-10">
                        <p>Click on the black tile below to create the path of the maze.</p>
                        <%- include('common/maze') %>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                        <p><b>Car Start Point</b></p>
                    </div>
                    <div class="form-group col-md-10 row">
                        <div class="form-group col-md-6 row">
                            <p class="col-md-4">x-axis</p>
                            <input type="number" name="x-car" class="form-control col-md-7" id="x-car" min="0" max="4"/>
                        </div>
                        <div class="form-group col-md-6 row">
                            <p class="col-md-4">y-axis</p>
                            <input type="number" name="y-car" class="form-control col-md-7" id="y-car" min="0" max="4"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                        <p><b>Destination</b></p>
                    </div>
                    <div class="form-group col-md-10 row">
                        <div class="form-group col-md-6 row">
                            <p class="col-md-4">x-axis</p>
                            <input type="number" name="x-dest" class="form-control col-md-7" id="x-dest" min="0" max="4"/>
                        </div>
                        <div class="form-group col-md-6 row">
                            <p class="col-md-4">y-axis</p>
                            <input type="number" name="y-dest" class="form-control col-md-7" id="y-dest" min="0" max="4"/>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="cancel" class="btn btn-dark cancel">Cancel</button> &nbsp&nbsp
                    <button type="create" class="btn btn-dark submit">Create</button>
                </div>
            </form>
        </div>
    </main>

    <footer>
        <%- include('common/footer') %>
    </footer>
    <script src="/js/maze.js"></script>
    <script src="/js/createChallenge.js"></script>
    <script>
        // <!-- Remove Sidebar -->
        $(document).ready(function(){
            $("#sidebarMenu").removeClass("sidebar");
            $(".position-sticky").css('display', 'none');
        });
    </script>
</body>
</html>